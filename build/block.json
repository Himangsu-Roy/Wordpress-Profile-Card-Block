{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "b-blocks/profile-card",
  "version": "1.0.0",
  "title": "Profile Card",
  "category": "widgets",
  "description": "Short description of the Test Purpose",
  "keywords": [
    "profile card",
    "proifle",
    "card"
  ],
  "textdomain": "b-blocks",
  "attributes": {
    "alignment": {
      "type": "string",
      "default": "center"
    },
    "purposeType": {
      "type": "string",
      "default": "test"
    },
    "colors": {
      "type": "object",
      "default": {
        "color": "black",
        "bg": "#B1C5A4"
      }
    },
    "profileImage": {
      "type": "object",
      "default": {
        "url": "",
        "alt": "Profile Image"
      }
    },
    "name": {
      "type": "string",
      "default": "Sarah Anderson"
    },
    "title": {
      "type": "string",
      "default": "Senior Product Designer"
    },
    "stats": {
      "type": "object",
      "default": {
        "projects": "1.2k",
        "followers": "8.5k",
        "following": "4.7k"
      }
    },
    "statLabel": {
      "type": "object",
      "default": {
        "projects": "Projects",
        "followers": "Followers",
        "following": "Following"
      }
    },
    "bio": {
      "type": "string",
      "default": "Creative designer with 5+ years of experience in digital product design and brand identity."
    },
    "skills": {
      "type": "array",
      "default": [
        "UI/UX",
        "Branding",
        "Motion"
      ]
    },
    "follow": {
      "type": "object",
      "default": {
        "text": "Follow",
        "link": "www.google.com"
      }
    },
    "message": {
      "type": "object",
      "default": {
        "text": "Message",
        "link": "www.google.com"
      }
    },
    "styles": {
      "type": "object",
      "properties": {
        "cardBorderGradient": {
          "type": "string"
        },
        "cardBorderColor": {
          "type": "string"
        },
        "avatarBorderGradient": {
          "type": "string"
        },
        "textContentGradient": {
          "type": "string"
        }
      },
      "default": {
        "cardBorderGradient": "linear-gradient(45deg, #60a5fa, #a78bfa) border-box",
        "cardBorderColor": "#fff",
        "avatarBorderGradient": "linear-gradient(45deg, #60a5fa, #a78bfa) border-box",
        "textContentGradient": "linear-gradient(45deg, #60a5fa, #a78bfa) border-box"
      }
    },
    "backgroundColor": {
      "type": "string",
      "default": "rgba(30, 41, 59, 0.8)"
    },
    "alpha": {
      "type": "number",
      "default": 0.8
    },
    "cardLayout": {
      "type": "object",
      "borderRadius": {
        "type": "string"
      },
      "bgColor": {
        "type": "string"
      },
      "default": {
        "borderRadius": {
          "top": "20px",
          "right": "20px",
          "bottom": "20px",
          "left": "20px"
        },
        "bgColor": {
          "bg": "#B1C5A4",
          "alpha": "0.8"
        }
      }
    },
    "nameSelectTag": {
      "type": "string",
      "default": "h1"
    },
    "nameFontFamily": {
      "type": "string",
      "default": "Arial, sans-serif"
    },
    "nameFontSize": {
      "type": "string",
      "default": "16px"
    },
    "nameFontWeight": {
      "type": "string",
      "default": "normal"
    },
    "nameLetterSpacing": {
      "type": "string",
      "default": ""
    },
    "nameLineHeight": {
      "type": "string",
      "default": ""
    },
    "nameTextTrasform": {
      "type": "string",
      "default": ""
    },
    "nameFontStyle": {
      "type": "string",
      "default": ""
    },
    "titleFontFamily": {
      "type": "string",
      "default": "Arial, sans-serif"
    },
    "titleFontSize": {
      "type": "string",
      "default": "16px"
    },
    "titleFontWeight": {
      "type": "string",
      "default": "normal"
    },
    "titleLetterSpacing": {
      "type": "string",
      "default": ""
    },
    "titleLineHeight": {
      "type": "string",
      "default": ""
    },
    "titleTextTrasform": {
      "type": "string",
      "default": ""
    },
    "titleFontStyle": {
      "type": "string",
      "default": ""
    },
    "textColor": {
      "type": "string",
      "default": "#94a3b8"
    },
    "cards": {
      "type": "array",
      "default": []
    }
  },
  "supports": {
    "align": [
      "wide",
      "full"
    ],
    "html": false
  },
  "example": {
    "attributes": {}
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./view.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}